<Window x:Class="UidSignals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Haptic Patterns (0-14)" FontSize="16" FontWeight="Bold" Margin="10"/>
        
        <WrapPanel Grid.Row="1" Margin="10" HorizontalAlignment="Left">
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="0" Width="60" Height="40">0</Button>
                <TextBlock Text="● ●" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="1" Width="60" Height="40">1</Button>
                <TextBlock Text="• •" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="2" Width="60" Height="40">2</Button>
                <TextBlock Text="•" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="3" Width="60" Height="40">3</Button>
                <TextBlock Text="–" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="4" Width="60" Height="40">4</Button>
                <TextBlock Text="–" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="5" Width="60" Height="40">5</Button>
                <TextBlock Text="•• •• •••" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="6" Width="60" Height="40">6</Button>
                <TextBlock Text="—— – – – – –" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="7" Width="60" Height="40">7</Button>
                <TextBlock Text="–  ● ●" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
        </WrapPanel>
        
        <WrapPanel Grid.Row="2" Margin="10" HorizontalAlignment="Left">
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="8" Width="60" Height="40">8</Button>
                <TextBlock Text="● ● ●   •" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="9" Width="60" Height="40">9</Button>
                <TextBlock Text="● ● ●   —" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="10" Width="60" Height="40">10</Button>
                <TextBlock Text="● ● – –" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="11" Width="60" Height="40">11</Button>
                <TextBlock Text="○ ○ ○" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="12" Width="60" Height="40">12</Button>
                <TextBlock Text="–   –   –" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="13" Width="60" Height="40">13</Button>
                <TextBlock Text="• •• • – –" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Click="ButtonBase_OnClick" Tag="14" Width="60" Height="40">14</Button>
                <TextBlock Text="—— ——" TextAlignment="Center" Width="80" FontSize="12" FontFamily="Consolas"/>
            </StackPanel>
        </WrapPanel>

        <TextBlock Grid.Row="3" x:Name="ThumbWheelDirectionLabel" Text="Thumb: -" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
